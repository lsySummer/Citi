<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.activity.MainActivity">
<!--    <nju.financecity_android.controller.widget.Banner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:id="@+id/banner"/>-->

    <nju.financecity_android.controller.widget.Footer
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/footer"/>

    <LinearLayout
            android:id="@+id/main_mid_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/footer"
            android:layout_marginLeft="3dp" android:layout_marginBottom="3dp" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_below="@+id/banner">

        <!--android:layout_below="@id/banner"-->

    </LinearLayout>
    <nju.financecity_android.controller.widget.Banner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/banner" android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
</RelativeLayout>
